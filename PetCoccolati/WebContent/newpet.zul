					<vbox style="margin-right:5%;" width="250px">
						<label>Name</label>
						<textbox></textbox>
						<label>DNI</label>
						<textbox></textbox>
					</vbox>
					<vbox style="margin-right:5%" width="250px">
						<label>Breed</label>
						<textbox></textbox>
						<label>Weight</label>
						<textbox></textbox>
					</vbox>
				</hbox>
				<hbox style="margin-left:3%;">
					<button sclass="bigbtn btn" label="CANCEL"></button>
					<button sclass="bigbtn btn" label="ADD" style="margin-left:70px;"></button>
				</hbox>
			</div>
		</div>
	</div>
